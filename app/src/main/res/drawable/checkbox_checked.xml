<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer Ring -->
    <item>
        <shape android:shape="oval">
            <size android:width="@dimen/_15sdp" android:height="@dimen/_15sdp" />
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="@dimen/_1sdp"
                android:color="@color/blue" /> <!-- Blue ring -->
        </shape>
    </item>

    <!-- Inner Filled Circle -->
    <item android:top="@dimen/_3sdp" android:bottom="@dimen/_3sdp" android:left="@dimen/_3sdp" android:right="@dimen/_3sdp">
        <shape android:shape="oval">
            <solid android:color="@color/blue" /> <!-- Filled blue -->
        </shape>
    </item>

</layer-list>
